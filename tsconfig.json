{
    "compilerOptions": {
        // "module": "CommonJS",
        "target": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "downlevelIteration": true,
        // "allowSyntheticDefaultImports": true,
        // "declaration": true,
        // "outDir": "dist",
        "sourceMap": true,
        // "rootDir": "src",
        "types": [
            "node",
        ],
        "typeRoots": [
            "./node_modules/@types",
            "/src/@types",
        ],
    },
    "include": [
        "src",
        "src/*.ts",
        "src/**/*.ts",
    ],
    "exclude": [
        "ignore",
        "scripts",
        "dist"
    ],
}
